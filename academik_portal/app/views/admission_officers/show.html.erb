  <h3>Email: </h3><p><%= s.email %></p><br>
  <h3>Phone: </h3><p><%= s.phone_number %></p><br>
  <h3>Course: </h3><p><%= s.course %></p><br>
  <h3>Application Essay: </h3><p><%= s.application_essay %></p><br>
  <h3>Application Status:</h3> <p><%= s.application_status %></p><br>
<% end %>